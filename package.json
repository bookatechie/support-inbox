{
  "name": "support-inbox",
  "version": "0.1.1",
  "description": "Modern real-time customer support shared inbox",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bookatechie/support-inbox.git"
  },
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server/index.ts",
    "dev:client": "cd src/client && npm run dev",
    "build": "npm run build:server && npm run build:client",
    "build:server": "tsc -p tsconfig.json",
    "build:client": "cd src/client && npm run build",
    "start": "node dist/server/index.js",
    "build:standalone": "npm run build && pkg dist/server/index.js -t node20-linux-x64 --assets 'dist/client/**/*' -o support-inbox",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "deploy": "git pull && npm run build && pm2 restart inbox"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.927.0",
    "@fastify/compress": "^8.0.1",
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/jwt": "^9.0.1",
    "@fastify/multipart": "^9.0.1",
    "@fastify/static": "^8.0.2",
    "@types/pg": "^8.15.6",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.1",
    "fastify": "^5.2.0",
    "imap-simple": "^5.1.0",
    "mailparser": "^3.6.5",
    "nodemailer": "^6.9.9",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^20.11.5",
    "@types/nodemailer": "^6.4.21",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "pino-pretty": "^13.1.2",
    "pkg": "^5.8.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
